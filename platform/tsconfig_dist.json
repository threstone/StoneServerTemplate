{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "allowJs": true,
    "types": [
      "node"
    ],
    "outDir": "../../dinosaur02-publish/platform/",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./",
    "**/*.ts",
    "**/*.json"
  ],
  "exclude": [
    "**/node_modules/",
    "**/dist/",
    "**/test",
    "./tsconfig.json",
    "./tsconfig_dist.json",
    "./package-lock.json"
  ]
}