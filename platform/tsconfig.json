{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "node",
      "mocha"
    ],
    "outDir": "dist/",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "./config/*.json"
  ],
  "exclude": [
    "./node_modules/",
    "**/dist"
  ]
}