{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "allowJs": true,
    "types": [
      "node"
    ],
    "outDir": "../../prodragon-publish/",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./",
    "**/*.ts",
    "**/*.json",
    "../common/proto/*"
  ],
  "exclude": [
    "./node_modules/",
    "./dist/",
    "**/test",
    "./tsconfig.json",
    "./tsconfig_dist.json",
    "./tsconfig_game_config.json",
    "./package.json",
    "./package-lock.json",
    "./app/core/config/client/*.json"
  ]
}