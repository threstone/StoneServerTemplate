{
    "compilerOptions": {
        "target": "es2017",
        "noImplicitAny": false,
        "module": "commonjs",
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "allowJs": true,
        "types": [
            "node"
        ],
        "outDir": "dist/game",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.json"
    ]
}