{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": false,
    "module": "commonjs",
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "node",
      "mocha"
    ],
    "outDir": "dist/",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./",
    "**/*.ts",
    "../common/proto/*",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "./app/core/config/**/*.json"
  ]
}